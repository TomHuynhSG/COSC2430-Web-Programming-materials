<!DOCTYPE html>
<html>
  <head>
    <title>Read Products</title>
  </head>
  <body>
    <h1>Products</h1>
    <table>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>On Sale</th>
        <th>Categories</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
      <% products.forEach(function(product) { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.description %></td>
          <td><%= product.onSale %></td>
          <td><%= product.categories %></td>
          <td><a href="/product/<%= product.id %>/update">Click here</a> </td>
          <td><a href="/product/<%= product.id %>/delete">Click here</a></td>
        </tr>
      <% }); %>
    </table>
  </body>
</html>